{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "overrides": [
    {
      "files": ["client/**/*.{js,jsx}"],
      "env": {
        "browser": true
      }
    },
    {
      "files": ["server/**/*.{js}"],
      "env": {
        "node": true
      }
    }
  ],
  "plugins": ["react", "prettier", "node"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "spaced-comment": "warn",
    "no-duplicate-imports": "warn",
    "no-unused-vars": "warn"
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
